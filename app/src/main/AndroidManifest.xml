            android:label="@string/title_activity_gerenciar_perfil"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name=".telasEtapas.EtapasModulo1Activity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ContainerLicoes.Modulos.Modulo1.ContainerModulo1Etapa1"
            android:label="@string/TituloEtapa1Modulo1"
