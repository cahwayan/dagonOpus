<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tcc.dagon.opus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.tcc.dagon.opus.utils.Multidex" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".LauncherActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".telas.login.LoginActivity_"
            android:screenOrientation="portrait" />

        <activity
            android:name=".telas.aprender.AprenderActivity_"
            android:screenOrientation="portrait"
            android:label="Aprender"
            android:theme="@style/TemaSemActionBar"
            />

        <activity
            android:name=".telas.login.CadastroActivity_"
            android:screenOrientation="portrait" />

        <activity
            android:name=".telas.aprender.menulateral.ActivityConfig_"
            android:screenOrientation="portrait" />

        <activity
            android:name=".telas.login.RecuperarSenhaActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".telas.aprender.menulateral.GerenciarPerfilActivity"
            android:label="@string/title_activity_gerenciar_perfil"
            android:screenOrientation="portrait" />

        <!-- TELAS DE ETAPAS -->
        <activity
            android:name=".telas.etapas.EtapasModulo1Activity"
            android:screenOrientation="portrait" />

        <!--CONTAINER GLOSSARIO -->

        <activity
            android:name=".telas.aprender.menulateral.glossario.ContainerComandosGlossario"
            android:label="Glossario"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <!-- CONTAINERS MODULO 1-->
        <!-- ESSA ATIVIDADE QUE INICIA A PORRA TODA DOS FRAGMENTOS-->

        <activity
            android:name=".telas.fragments.container.ContainerEtapa"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".telas.fragments.container.ContainerProva"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- CONTAINERS MODULO 2-->
        <!-- ESSA ATIVIDADE QUE INICIA A PORRA TODA DOS FRAGMENTOS-->


        <activity android:name=".telas.login.AlterarSenhaActivity" />
        <activity android:name=".telas.certificado.CertificadoActivity" />
        <activity android:name=".telas.certificado.CertificadoIncompleto"/>
    </application>

</manifest>