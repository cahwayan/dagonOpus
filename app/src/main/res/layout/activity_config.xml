<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_activity_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fundoNeutro"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/borda_container_licao"
        android:padding="10dp"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/txtConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtConfig"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <TextView
                android:text="@string/txtSons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSons"
                android:layout_weight="1"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="14sp" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/switchSons"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:padding="15dp">
            <Button
                android:text="@string/apagarProgresso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnResetarProgresso"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textSize="14sp"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:layout_gravity="left" />
        </LinearLayout>



    </LinearLayout>



</ScrollView>
