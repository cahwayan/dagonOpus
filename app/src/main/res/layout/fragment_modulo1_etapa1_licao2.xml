<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e7e7e7">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingContainerLicao"
        android:layout_margin="5dp"
        android:background="@drawable/borda_container_licao">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/titulo1Modulo1Etapa1Licao2"
            android:textColor="@color/corTituloLicao"
            android:textSize="20sp"
            android:id="@+id/txtTitulo1Modulo1Etapa1Licao2" />

        <TextView
            android:text="@string/txt1_modulo1_etapa1_licao2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTexto1Modulo1Etapa1Licao2"
            android:textSize="15sp"
            android:gravity="start|end"
            android:layout_gravity="end|center_vertical"
            android:paddingTop="@dimen/paddingTopoTextoLicao"
            android:paddingBottom="@dimen/paddingBaixoTextoLicao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/titulo2Modulo1Etapa1Licao2"
            android:textColor="@color/corTituloLicao"
            android:textSize="20sp"
            android:id="@+id/txtTitulo2Modulo1Etapa1Licao2" />

        <TextView
            android:text="@string/txt2_modulo1_etapa1_licao2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTexto2Modulo1Etapa1Licao2"
            android:textSize="15sp"
            android:gravity="start|end"
            android:layout_gravity="end|center_vertical"
            android:paddingTop="@dimen/paddingTopoTextoLicao"
            android:paddingBottom="@dimen/paddingBaixoTextoLicao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:text="@string/titulo3Modulo1Etapa1Licao2"
            android:textColor="@color/corTituloLicao"
            android:textSize="20sp"
            android:id="@+id/txtTitulo3Modulo1Etapa1Licao2" />

        <TextView
            android:text="@string/txt3_modulo1_etapa1_licao2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTexto3Modulo1Etapa1Licao2"
            android:textSize="15sp"
            android:gravity="start|end"
            android:layout_gravity="end|center_vertical"
            android:paddingTop="@dimen/paddingTopoTextoLicao"
            android:paddingBottom="@dimen/paddingBaixoTextoLicao" />

        <Button
            android:text="@string/txtAvancar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAvancarModulo1Etapa1Licao1"
            android:layout_gravity="end"
            android:background="@color/corBtnModulo2"
            android:textColor="#ffffff"
            android:padding="10dp"/>
    </LinearLayout>



</ScrollView>