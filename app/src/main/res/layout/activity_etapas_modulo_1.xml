<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollEtapas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tcc.dagon.opus.etapas.EtapasModulo1Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ContainerGeral">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ContainerLinha1"
            android:weightSum="100">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:id="@+id/Etapa1">

                <TextView
                    android:text="@string/txtTituloEtapa1Modulo1"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:id="@+id/txtTituloEtapa1"
                    android:textSize="@dimen/tamanhoTextoEtapa"
                    android:gravity="left" />

                <TextView
                    android:text="1/9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|right"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtProgressoEtapa1Modulo1"
                    android:background="@color/common_signin_btn_dark_text_disabled"
                    android:textSize="23sp"
                    android:textColor="@android:color/black"
                    android:padding="@dimen/paddingProgressoEtapas" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:id="@+id/Etapa2">

                <TextView
                    android:text="@string/txtTituloEtapa2Modulo1"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:id="@+id/txtTituloEtapa2"
                    android:textSize="@dimen/tamanhoTextoEtapa"
                    android:gravity="left" />

                <TextView
                    android:text="2/9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|right"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtProgressoEtapa1Modulo2"
                    android:background="@color/common_signin_btn_dark_text_disabled"
                    android:textSize="23sp"
                    android:textColor="@android:color/black"
                    android:padding="@dimen/paddingProgressoEtapas" />
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ContainerLinha2">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:id="@+id/Etapa3">

                <TextView
                    android:text="@string/txtTituloEtapa3Modulo1"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:id="@+id/txtTituloEtapa3"
                    android:textSize="@dimen/tamanhoTextoEtapa"
                    android:gravity="left" />

                <TextView
                    android:text="3/9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|right"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtProgressoEtapa1Modulo3"
                    android:background="@color/common_signin_btn_dark_text_disabled"
                    android:textSize="23sp"
                    android:textColor="@android:color/black"
                    android:padding="@dimen/paddingProgressoEtapas" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:id="@+id/Etapa4">

                <TextView
                    android:text="@string/txtTituloEtapa4Modulo1"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:id="@+id/txtTituloEtapa4"
                    android:textSize="@dimen/tamanhoTextoEtapa"
                    android:gravity="left" />

                <TextView
                    android:text="4/9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|right"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtProgressoEtapa1Modulo4"
                    android:background="@color/common_signin_btn_dark_text_disabled"
                    android:textSize="23sp"
                    android:textColor="@android:color/black"
                    android:padding="@dimen/paddingProgressoEtapas" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
