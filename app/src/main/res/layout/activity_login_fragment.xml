<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llLoginForm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingEnd="20dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingStart="20dp">

    <com.tcc.dagon.opus.CustomViews.CustomEditText
        style="@style/customEditText"
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="@string/hintEmail"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="#fff"
        android:textColorLink="@color/colorAccent"
        android:textIsSelectable="false"
        android:textColor="#fff"
        android:typeface="monospace"
        android:textSize="14sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif" />

    <com.tcc.dagon.opus.CustomViews.CustomEditText
        style="@style/customEditText"
        android:id="@+id/edt_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="#fff"
        android:textColorLink="@color/colorAccent"
        android:textColor="#fff"
        android:hint="@string/hintSenha"
        android:textSize="14sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <com.tcc.dagon.opus.CustomViews.CustomButton
            style="@style/customButton"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/btnSignIn"
            android:text="@string/Entrar"
            android:textColor="@color/colorAccentDark"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:typeface="sans"
            android:background="@color/colorAccent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:textColorLink="?attr/colorPrimary" />

        <TextView
            style="@style/customEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ou"
            android:id="@+id/txtOu"
            android:textColor="@color/colorAccentDark"
            android:typeface="monospace"
            android:fontFamily="fonts/GothamRounded-Light.otf"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
             />

        <com.google.android.gms.common.SignInButton
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:id="@+id/btnSignInGoogle"
            android:text="Login"
            android:layout_weight="0.49"
            android:clickable="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp" />

        <com.tcc.dagon.opus.CustomViews.CustomButton
            style="@style/customButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/esqueceuSenha"
            android:id="@+id/btnAlterarSenha"
            android:textAllCaps="false"
            android:background="#00ffffff"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorAccentDark"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:padding="2dp" />
        <!-- PROFILE -->

        <com.tcc.dagon.opus.CustomViews.CustomButton
            style="@style/customButton"
            android:text="@string/BotaoCriarConta"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btnCriarConta"
            android:background="#00ffffff"
            android:gravity="center_horizontal"
            android:fontFamily="fonts/GothamRounded-Light.otf"
            android:textColor="@color/colorAccentDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</LinearLayout>

