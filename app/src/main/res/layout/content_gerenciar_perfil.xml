<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tcc.dagon.opus.GerenciarPerfilActivity"
    tools:showIn="@layout/activity_gerenciar_perfil"
    android:background="@drawable/telaloginbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/ivProfile2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@null"
                android:layout_gravity="center" />

            <ProgressBar
                android:id="@+id/pbProfile1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/perfilEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="teste"
                android:textColor="#ff0000" />

            <TextView
                android:id="@+id/perfilNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff0000" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
