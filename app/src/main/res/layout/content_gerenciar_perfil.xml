<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tcc.dagon.opus.GerenciarPerfilActivity"
    tools:showIn="@layout/activity_gerenciar_perfil"
    android:background="@drawable/telaloginbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayoutG"
        android:weightSum="1">

        <ImageView
            android:layout_width="131dp"
            android:layout_height="50dp"
            android:id="@+id/iconPerfil"
            android:layout_alignTop="@+id/linearLayoutG"

            android:layout_toLeftOf="@+id/linearLayoutG"
            android:layout_weight="0.28"
            android:src="@drawable/icon_foto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewca"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.28" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnCaptura"
            android:layout_weight="0.28" />

    </LinearLayout>

</RelativeLayout>
