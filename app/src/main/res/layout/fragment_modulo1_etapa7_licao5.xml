<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e7e7e7">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingContainerLicao"
        android:layout_margin="5dp"
        android:background="@drawable/borda_container_licao"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/titulo1Modulo1Etapa7Licao3"
            android:id="@+id/txtTitulo1Modulo1Etapa7Licao3"
            android:textColor="@color/corTituloLicao"
            android:textSize="20sp"
            />

        <TextView
            android:text="@string/texto1Modulo1Etapa7Licao3"
            android:id="@+id/txtTexto1Modulo1Etapa7Licao3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="start|end"
            android:layout_gravity="end|center_vertical"
            android:paddingTop="@dimen/paddingTopoTextoLicao"
            android:paddingBottom="@dimen/paddingBaixoTextoLicao"
            android:lineSpacingExtra="2sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:text="@string/dica1Modulo1Etapa7Licao3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dica1Modulo1Etapa4Licao1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/borda_pontilhada_vermelha"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:paddingStart="64dp"
                android:paddingLeft="64dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/icon_dica_vermelha"
                android:id="@+id/imgDica0"
                android:layout_gravity="start|center_vertical"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:layout_margin="5dp" />

        </FrameLayout>

        <TextView
            android:text="@string/texto2Modulo1Etapa7Licao3"
            android:id="@+id/txtTexto2Modulo1Etapa7Licao3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="start|end"
            android:layout_gravity="end|center_vertical"
            android:paddingTop="@dimen/paddingTopoTextoLicao"
            android:paddingBottom="@dimen/paddingBaixoTextoLicao"
            android:lineSpacingExtra="2sp" />

        <ImageView
            android:src="@drawable/imagem1modulo1etapa7licao3"
            android:id="@+id/imagem1Modulo1Etapa7Licao3"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="false"
            android:padding="10dp" />

        <TextView
            android:text="@string/texto3Modulo1Etapa7Licao3"
            android:id="@+id/txtTexto3Modulo1Etapa7Licao3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="start|end"
            android:layout_gravity="end|center_vertical"
            android:paddingTop="@dimen/paddingTopoTextoLicao"
            android:paddingBottom="@dimen/paddingBaixoTextoLicao"
            android:lineSpacingExtra="2sp" />

        <include layout="@layout/botao_avancar"/>
    </LinearLayout>



</ScrollView>