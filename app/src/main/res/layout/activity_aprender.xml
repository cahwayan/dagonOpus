            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:background="@color/corBtnModulo1"
                android:id="@+id/btnModulo1">
                <ImageView
                    android:id="@+id/imgModulo1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btnmodulo1"
                    android:padding="0dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:contentDescription="@+id/descricaoBotaoModulo1"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtTituloModulo1"
                    android:id="@+id/txtTitulo1"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/MargemTituloModulo"
                    android:textSize="@dimen/tamanhoFonteModulo"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtProgressoModulo1"
                    android:id="@+id/txtProgresso1"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif"
                    android:typeface="normal"
                    android:textSize="@dimen/tamanhoFonteModulo" />

            </FrameLayout>


            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
