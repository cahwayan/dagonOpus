<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/fundoNeutro">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingBottom="@dimen/paddingContainerLicao"
        android:paddingEnd="@dimen/paddingContainerLicao"
        android:paddingLeft="@dimen/paddingContainerLicao"
        android:paddingRight="@dimen/paddingContainerLicao"
