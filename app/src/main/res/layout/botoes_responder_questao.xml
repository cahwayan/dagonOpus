<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Pontos: 0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtPontos"
            android:textSize="14sp"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:gravity="right"
            android:maxLines="1"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

    <Button
        android:text="@string/txtChecar"
        android:layout_width="120dp"
        android:layout_height="54dp"
        android:id="@+id/btnChecar"
        android:layout_gravity="center_vertical|end"
        android:gravity="center_horizontal|center_vertical"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:padding="7dp"
        android:textSize="14sp"
        />

    <Button
        android:text="@string/txtTentarNovamente"
        android:layout_width="120dp"
        android:layout_height="54dp"
        android:id="@+id/btnTentarNovamente"
        android:layout_gravity="center_vertical|end"
        android:gravity="center_horizontal|center_vertical"
        android:background="@color/corDicaVermelha"
        android:textColor="#ffffff"
        android:padding="7dp"
        android:textSize="14sp"
        />

    <Button
        android:text="@string/txtConcluir"
        android:layout_width="120dp"
        android:layout_height="54dp"
        android:id="@+id/btnAvancar"
        android:layout_gravity="center_vertical|end"
        android:gravity="center_horizontal|center_vertical"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:padding="7dp"
        android:textSize="14sp"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/resposta_certa"
        android:id="@+id/imgRespostaCerta"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_vertical" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/resposta_errada"
        android:id="@+id/imgRespostaErrada"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_vertical" />
    </FrameLayout>

</LinearLayout>