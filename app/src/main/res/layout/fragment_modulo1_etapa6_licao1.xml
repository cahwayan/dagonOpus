            android:gravity="start|end"
            android:layout_gravity="end|center_vertical"
            android:paddingTop="@dimen/paddingTopoTextoLicao"
            android:paddingBottom="@dimen/paddingBaixoTextoLicao"
            android:lineSpacingExtra="2sp" />


        <ImageView
            android:src="@drawable/imagem1modulo1etapa6licao1"
            android:id="@+id/imagem1Modulo1Etapa6Licao1"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="false"
            android:padding="10dp" />

        <TextView
            android:text="@string/texto4Modulo1Etapa6Licao1"
            android:id="@+id/txtTexto4Modulo1Etapa6Licao1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="start|end"
            android:layout_gravity="end|center_vertical"
            android:paddingTop="@dimen/paddingTopoTextoLicao"
            android:paddingBottom="@dimen/paddingBaixoTextoLicao"
            android:lineSpacingExtra="2sp" />


        <ImageView
            android:src="@drawable/imagem2modulo1etapa6licao1"
            android:id="@+id/imagem2Modulo1Etapa6Licao1"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="false"
            android:padding="10dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:text="@string/dica2Modulo1Etapa6Licao1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dica2Modulo1Etapa6Licao1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/borda_pontilhada_azul"
                android:textColor="#ffffff"
                android:paddingStart="80dp"
                android:paddingLeft="80dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_dica_azul"
                android:id="@+id/imgDica2"
                android:layout_gravity="start|center_vertical"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:layout_margin="5dp" />

        </FrameLayout>







        <ImageView
            android:src="@drawable/imagem3modulo1etapa6licao1"
            android:id="@+id/imagem3Modulo1Etapa6Licao1"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
