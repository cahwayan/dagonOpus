            android:text="@string/texto5Modulo1Etapa6Licao1"
            android:id="@+id/txtTexto5Modulo1Etapa6Licao1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="start|end"
            android:layout_gravity="end|center_vertical"
            android:paddingTop="@dimen/paddingTopoTextoLicao"
            android:paddingBottom="@dimen/paddingBaixoTextoLicao"
            android:lineSpacingExtra="2sp" />


        <ImageView
            android:src="@drawable/imagem4modulo1etapa6licao1"
            android:id="@+id/imagem4Modulo1Etapa6Licao1"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
