<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e7e7e7">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingContainerLicao"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/pergunta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/corTituloLicao"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:typeface="normal"
            android:fontFamily="@string/fonteQuestao" />

        <CheckBox
            android:id="@+id/alternativa1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda_alternativa"
            android:padding="5dp"
            android:textSize="@dimen/textSizeAltenativa"
            android:minHeight="60dp" />

        <CheckBox
            android:id="@+id/alternativa2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda_alternativa"
            android:padding="5dp"
            android:textSize="@dimen/textSizeAltenativa"
            android:minHeight="60dp" />

        <CheckBox
            android:id="@+id/alternativa3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda_alternativa"
            android:padding="5dp"
            android:textSize="@dimen/textSizeAltenativa"
            android:minHeight="60dp" />

        <CheckBox
            android:id="@+id/alternativa4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda_alternativa"
            android:padding="5dp"
            android:textSize="@dimen/textSizeAltenativa"
            android:minHeight="60dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda_container_licao"
            android:layout_marginTop="40dp">



        </LinearLayout>

        <include layout="@layout/botoes_responder_questao"/>


    </LinearLayout>

</ScrollView>