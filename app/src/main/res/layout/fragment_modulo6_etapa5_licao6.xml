<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#e7e7e7">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        >
        <TextView
            android:id="@+id/perguntaCompletar"
            android:text="@string/Modulo6Etapa5Pergunta3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/corTituloLicao"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:typeface="normal"
            android:fontFamily="@string/fonteQuestao" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/palavra1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="13sp"
                android:layout_weight="15"
                android:maxLength="4"
                android:maxLines="1"
                android:width="45dp" />


            <EditText
                android:id="@+id/palavra2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="13sp"
                android:layout_weight="15"
                android:maxLength="6"
                android:maxLines="1"
                android:width="65dp" />

            <TextView
                android:id="@+id/hardcode1"
                android:text="()"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/corTituloLicao"
                android:textSize="12.5sp"
                android:typeface="normal"
                android:fontFamily="@string/fonteQuestao"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/perguntaCompletar2"
            android:text="@string/Modulo6Etapa5Pergunta3_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/corTituloLicao"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:typeface="normal"
            android:fontFamily="@string/fonteQuestao" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|fill_horizontal"
           >

            <TextView
                android:id="@+id/text1"
                android:text="@string/Modulo6Etapa5Pergunta3Linha2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/corTituloLicao"
                android:textSize="12.5sp"
                android:typeface="normal"
                android:fontFamily="@string/fonteQuestao"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|fill_horizontal"
            >

            <TextView
                android:id="@+id/hardcode2"
                android:text="c3."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/corTituloLicao"
                android:textSize="12.5sp"
                android:typeface="normal"
                android:fontFamily="@string/fonteQuestao"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/palavra3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="13sp"
                android:layout_weight="15"
                android:maxLength="3"
                android:maxLines="1"
                android:width="35dp" />

            <TextView
                android:id="@+id/text2"
                android:text="@string/Modulo6Etapa5Pergunta3Linha3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/corTituloLicao"
                android:textSize="12.5sp"
                android:typeface="normal"
                android:fontFamily="@string/fonteQuestao"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/text3"
            android:text="@string/Modulo6Etapa5Pergunta3Linha4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/corTituloLicao"
            android:textSize="12.5sp"
            android:typeface="normal"
            android:fontFamily="@string/fonteQuestao"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|fill_horizontal"
            >

            <TextView
                android:id="@+id/text4"
                android:text="@string/Modulo6Etapa5Pergunta3Linha5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/corTituloLicao"
                android:textSize="12.5sp"
                android:typeface="normal"
                android:fontFamily="@string/fonteQuestao"
                android:layout_marginBottom="5dp"/>


            <EditText
                android:id="@+id/palavra4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="13sp"
                android:layout_weight="15"
                android:maxLength="11"
                android:maxLines="1"
                android:width="110dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/text5"
            android:text="@string/Modulo6Etapa5Pergunta3Linha6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/corTituloLicao"
            android:textSize="12.5sp"
            android:typeface="normal"
            android:fontFamily="@string/fonteQuestao"
            android:layout_marginBottom="5dp"/>



        <include layout="@layout/botoes_responder_questao"/>
    </LinearLayout>

</ScrollView>