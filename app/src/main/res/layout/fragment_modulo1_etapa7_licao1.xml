<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e7e7e7">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingContainerLicao"
        android:layout_margin="5dp"
        android:background="@drawable/borda_container_licao"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/titulo1Modulo1Etapa7Licao1"
            android:id="@+id/txtTitulo1Modulo1Etapa7Licao1"
            android:textColor="@color/corTituloLicao"
            android:textSize="20sp"
            />

        <TextView
            android:text="@string/texto1Modulo1Etapa7Licao1"
            android:id="@+id/txtTexto1Modulo1Etapa7Licao1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="start|end"
            android:layout_gravity="end|center_vertical"
            android:paddingTop="@dimen/paddingTopoTextoLicao"
            android:paddingBottom="@dimen/paddingBaixoTextoLicao"
            android:lineSpacingExtra="2sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/titulo2Modulo1Etapa7Licao1"
            android:id="@+id/txtTitulo2Modulo1Etapa7Licao1"
            android:textColor="@color/corTituloLicao"
            android:textSize="20sp"
            />

        <TextView
            android:text="@string/texto2Modulo1Etapa7Licao1"
            android:id="@+id/txtTexto2Modulo1Etapa7Licao1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="start|end"
            android:layout_gravity="end|center_vertical"
            android:paddingTop="@dimen/paddingTopoTextoLicao"
            android:paddingBottom="@dimen/paddingBaixoTextoLicao"
            android:lineSpacingExtra="2sp" />

        <ImageView
            android:src="@drawable/imagem1modulo1etapa7licao1"
            android:id="@+id/imagem1Modulo1Etapa7Licao1"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="false"
            android:padding="10dp" />

        <TextView
            android:text="@string/texto3Modulo1Etapa7Licao1"
            android:id="@+id/txtTexto3Modulo1Etapa7Licao1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="start|end"
            android:layout_gravity="end|center_vertical"
            android:paddingTop="@dimen/paddingTopoTextoLicao"
            android:paddingBottom="@dimen/paddingBaixoTextoLicao"
            android:lineSpacingExtra="2sp" />

        <ImageView
            android:src="@drawable/imagem2modulo1etapa7licao1"
            android:id="@+id/imagem2Modulo1Etapa7Licao1"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="false"
            android:padding="10dp" />

        <include layout="@layout/botao_avancar"/>
    </LinearLayout>



</ScrollView>